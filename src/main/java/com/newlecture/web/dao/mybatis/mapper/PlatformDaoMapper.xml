<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.newlecture.web.dao.PlatformDao">
	
	<select id="getList" resultType="com.newlecture.web.entity.Platform">
		SELECT `PLATFORM`.`CODE`,
		    `PLATFORM`.`NAME`
		FROM `newlecture`.`PLATFORM`			
	</select>
	
	<select id="get" resultType="com.newlecture.web.entity.Platform">
		SELECT `PLATFORM`.`CODE`,
		    `PLATFORM`.`NAME`
		FROM `newlecture`.`PLATFORM`	
		WHERE CODE=#{code}
	</select>	
	
	<insert id="add" parameterType="com.newlecture.web.entity.Platform">
		<selectKey order="BEFORE" keyProperty="code" resultType="String">
			SELECT MAX(CAST(CODE AS UNSIGNED))+1 CODE FROM PLATFORM
		</selectKey>
		INSERT INTO `newlecture`.`PLATFORM`
		(
			`CODE`,
			`NAME`
		)
		VALUES
		(
			#{code},
			#{name}
		)		
	</insert>
	
	<delete id="delete">
		DELETE FROM `newlecture`.`PLATFORM`
		WHERE CODE=#{code}
		
	</delete>
	
	<update id="update" parameterType="com.newlecture.web.entity.Platform">
		UPDATE `newlecture`.`PLATFORM`
		SET		
		`NAME` = #{name}
		WHERE `CODE` = #{code}		
	</update>
	
</mapper>