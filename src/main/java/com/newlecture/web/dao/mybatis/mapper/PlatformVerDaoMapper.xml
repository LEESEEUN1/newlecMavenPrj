<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.newlecture.web.dao.PlatformVerDao">
	
	<select id="getList" resultType="com.newlecture.web.entity.PlatformVer">
		SELECT `PLATFORM_VER`.`CODE`,
		    `PLATFORM_VER`.`NAME`,
		    `PLATFORM_VER`.`PLATFORM_CODE`
		FROM `newlecture`.`PLATFORM_VER`				
	</select>
	
	<select id="get" resultType="com.newlecture.web.entity.PlatformVer">
		SELECT `PLATFORM_VER`.`CODE`,
		    `PLATFORM_VER`.`NAME`,
		    `PLATFORM_VER`.`PLATFORM_CODE`
		FROM `newlecture`.`PLATFORM_VER`	
		WHERE CODE=#{code}
	</select>	
	
	<insert id="add" parameterType="com.newlecture.web.entity.PlatformVer">
		<selectKey order="BEFORE" keyProperty="code" resultType="String">
			SELECT MAX(CAST(CODE AS UNSIGNED))+1 CODE FROM PLATFORM_VER
		</selectKey>
		INSERT INTO `newlecture`.`PLATFORM_VER`
		(
			`CODE`,
			`NAME`,
			`PLATFORM_CODE`
		)
		VALUES
			#{code},
			#{name},
			#{platformCode}
		);

	</insert>
	
	<delete id="delete">
		DELETE FROM `newlecture`.`PLATFORM_VER`
		WHERE CODE=#{code}		
	</delete>
	
	<update id="update" parameterType="com.newlecture.web.entity.PlatformVer">
		UPDATE `newlecture`.`PLATFORM_VER`
		SET		
		`NAME` = #{name},
		`PLATFORM_CODE` = #{platformCode}
		WHERE `CODE` = #{code}

	</update>
	
</mapper>